{% extends 'public-page-default.html.twig' %}

{% block content %}

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="content-pad">
      {% include 'partials/flashes.html.twig' %}

      {% if error %}
      <div class="alert alert-warning">{{ error.message|trans({}) }}</div>
      {% endif %}

      <form class="form" action="{{ path('login-check') }}" method="post">
        <div class="form-group email-field">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-fw fa-at"></i>
            </div>
            <input style="text-transform: lowercase" class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="address@example.com" />
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-fw fa-lock"></i>
            </div>
            <input class="form-control" type="password" id="password" name="_password" placeholder="Password" />
          </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-primary" type="submit">Login</button>

      </form>

      <hr />
      <ul>
        <li><a href="{{ path('forgot-password') }}">I forgot my password.</a></li>
        <li><a href="{{ path('reverify-account') }}">I did not receive the account verification email.</a></li>
        <li><a href="{{ path('create-account') }}">Create a GPS account.</a></li>
      </ul>
      
    </div>
  </div>
</div>

{% endblock %}
