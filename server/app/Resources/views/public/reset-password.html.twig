{% extends 'public-page-default.html.twig' %}

{% block content %}


<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="content-pad">
      {% include 'partials/flashes.html.twig' %}
      
      <form class="form" action="" method="POST">
        <div class="form-group {% if form_errors(form.password.password)|length > 0 %} has-error {% endif %}">
          {{ form_label(form.password.password, null, {'label_attr': {'class': 'control-label'}}) }}
          {{ form_errors(form.password.password) }}
          {{ form_widget(form.password.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group {% if form_errors(form.password.confirm)|length > 0 %} has-error {% endif %}">
          {{ form_label(form.password.confirm, null, {'label_attr': {'class': 'control-label'}}) }}
          {{ form_errors(form.password.confirm) }}
          {{ form_widget(form.password.confirm, {'attr': {'class': 'form-control'}}) }}
        </div>
        <p class="help-block">Choose a new password.  For security reasons it cannot be the same as your old password.</p>

        {{form_rest(form)}}

        <div class="form-group">
          <input class="btn btn-primary" type="submit" name="submit" value="Submit" />
        </div>
      </form>
      
    </div>
  </div>
</div>

{% endblock %}
